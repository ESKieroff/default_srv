generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  itemid      Int           @id @default(autoincrement())
  title       String        @db.VarChar(255)
  description String?
  model       area
  range_min   Float?
  range_max   Float?
  target      Float?
  fk_userid   Int
  createdat   DateTime      @default(now()) @db.Timestamp(6)
  updatedat   DateTime      @default(now()) @db.Timestamp(6)
  users       User          @relation(fields: [fk_userid], references: [userid], onDelete: NoAction, onUpdate: NoAction)
  Mensuration Mensuration[]
  tags        Tag[]

  @@map("items")
}

model Mensuration {
  mensurationid Int      @id @default(autoincrement())
  fk_itemid     Int?
  thisvalue     Float
  createdat     DateTime @default(now()) @db.Timestamp(6)
  updatedat     DateTime @default(now()) @db.Timestamp(6)
  Item          Item?    @relation(fields: [fk_itemid], references: [itemid], onDelete: NoAction, onUpdate: NoAction)

  @@map("mensurations")
}

model Tag {
  tagid      Int      @id @default(autoincrement())
  title      String   @db.VarChar(255)
  itemitemid Int?
  createdat  DateTime @default(now()) @db.Timestamp(6)
  updatedat  DateTime @default(now()) @db.Timestamp(6)
  Item       Item?    @relation(fields: [itemitemid], references: [itemid], onDelete: NoAction, onUpdate: NoAction)

  @@map("tags")
}

enum area {
  HARDSKILL
  SOFTSKILL
  HEALTH
  VIRTUE
  OTHER
}

enum UserType {
  ERP
  PUBLIC
  API
  SYSTEM
  ANONYMOUS
  ROOT
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum Country {
  BRAZIL
  UNITED_STATES
  GERMANY
  JAPAN
}

model User {
  userid             Int       @id @default(autoincrement())
  username           String    @unique @db.VarChar(255)
  email              String    @unique @db.VarChar(255)
  password           String    @db.VarChar(255)
  firstname          String?   @db.VarChar(255)
  lastname           String?   @db.VarChar(255)
  photo              Bytes?
  biography          String?
  tittle             String?   @db.VarChar(255)
  description        String?
  birth              DateTime? @db.Timestamp(6)
  phone              String?   @db.VarChar(255)
  profiledescription String?
  profilestatus      String?   @db.VarChar(255)
  socialnetwork      Json?
  interests          Json?
  preferences        Json?
  configurations     Json?
  country            Country?
  gender             Gender?
  usertype           UserType  @default(PUBLIC)
  active             Boolean   @default(true)
  createdat          DateTime  @default(now()) @db.Timestamp(6)
  updatedat          DateTime  @default(now()) @db.Timestamp(6)
  items              Item[]

  @@map("users")
}
